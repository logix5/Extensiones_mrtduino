		"puertosDS1302": ["Port1", "Port2", "Port3", "Port4", "Port5", "Port6", "Port7", "Port8","Port9", "Port10", "Port11", "Port12", "Port13", "Port14", "Port15", "Port16"],
         "dow": ["Lunes","Martes","Miércoles","Jueves","Viernes","Sábado","Domingo"],
