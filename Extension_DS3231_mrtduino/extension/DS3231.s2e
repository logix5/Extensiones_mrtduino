				"def":"",
				"work":"t.minute()",
				"loop":""
			}
		],
        [
			"R",
			"Segundos",
			"DS3231sec",
			{
				"setup":"",
				"inc":"",
				"def":"",
				"work":"t.second()",
				"loop":""
			}
		]
       
